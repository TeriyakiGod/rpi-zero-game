{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Build and Run on RPi",
            "type": "cppdbg",
            "request": "launch",
            "preLaunchTask": "run",
            "program": "${workspaceFolder}/build/rpi-zero-game",
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ]
        }
    ]
}